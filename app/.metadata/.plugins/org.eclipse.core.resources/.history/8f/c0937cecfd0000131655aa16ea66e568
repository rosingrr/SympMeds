package com.example.sympmeds;

import jxl.Cell;
import jxl.Sheet;
import android.os.Bundle;
import android.app.Activity;
import android.content.Intent;
import android.view.Menu;
import android.widget.TextView;

public class DrugInfo extends Activity {
	private final static int MEDICATION_SHEET = 1;
	private final static int STARTING_ROW = 1;
	private final static int DRUG_NAME_COL = 0;
	private final static int SIDE_EFFECTS_COL = 1;
	private final static int DIRECTIONS_OF_USE_COL = 2;
	private final static int SYMPTOMS_COL = 3;
	
	/**onCreate() is called when the DrugInfo activity is started, which is when the
	 * Get Info button from the DrugList activity is pushed.
	 */
	@Override
	protected void onCreate(Bundle savedInstanceState) {
		super.onCreate(savedInstanceState);

		// Get the symptom from the intent; this area is not done
		Intent intent = getIntent();
		String drug = intent.getStringExtra(DrugList.DRUG_INFO);

		setContentView(R.layout.activity_drug_info);

		//get medication sheet from the database variable
		Sheet sheet = MainActivity.database.getSheet(MEDICATION_SHEET);

		//finds the correct drug
		int drugNumber;
		Cell cell;
		String text = "";
		for(drugNumber = STARTING_ROW; drugNumber < sheet.getRows(); drugNumber++) {
			cell = sheet.getCell(DRUG_NAME_COL, drugNumber);
			text = cell.getContents();
			//if it is the correct drug, leave the for-loop
			if (drug.equals(text)) {
				break;
			}
		}

		//enters strings into textViews
		//drug name
        TextView drugName = (TextView) findViewById(R.id.drugName_textView);
        drugName.setText(text);
        //symptoms
        cell = sheet.getCell(SYMPTOMS_COL, drugNumber);
        text = cell.getContents();
        TextView drugSymp = (TextView) findViewById(R.id.drugSymp_textView);
        drugSymp.setText(text);
        //side-effects
        cell = sheet.getCell(SIDE_EFFECTS_COL, drugNumber);
        text = cell.getContents();
        TextView drugSideEffs = (TextView) findViewById(R.id.drugSideEffects_textView);
        drugSideEffs.setText(text);
        //directions of use
        cell = sheet.getCell(DIRECTIONS_OF_USE_COL, drugNumber);
        text = cell.getContents();
        TextView drugDir = (TextView) findViewById(R.id.drugDirections_textView);
        drugDir.setText(text);
	}

    /**
     * This was generated by default by Eclipse
     */
	@Override
	public boolean onCreateOptionsMenu(Menu menu) {
		// Inflate the menu; this adds items to the action bar if it is present.
		getMenuInflater().inflate(R.menu.drug_info, menu);
		return true;
	}

}